{% extends 'mail/base.html.twig' %}

{% block body %}
    <h1>{{ 'reset_password.email.title' | trans }}</h1>

    <p>{{ 'reset_password.email.description' | trans }}</p>

    <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
        <tbody>
        <tr>
            <td align="center">
                <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                    <tbody>
                    <tr>
                        <td>
                            <a href="{{ url('app_reset_password', {token: resetToken.token}) }}">{{ 'reset_password.email.cta' | trans }}</a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        </tbody>
    </table>
    {{ 'reset_password.email.description_alternative_link' | trans({'%expire%': resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') , '%url%': url('app_reset_password', {token: resetToken.token}) }) | raw}}
{% endblock %}
