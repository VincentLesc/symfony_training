{% extends 'base.html.twig' %}

{% block title %}Hello ChallengeController!{% endblock %}

{% block body %}
<div class="b-example-divider"></div>

{% include "challenge/challenge/_challenge_header.html.twig" %}

<div class="b-example-divider"></div>

 <div class="container px-4 py-5" id="custom-cards">
    <h2 class="pb-2 border-bottom">Custom cards</h2>

    <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
    {% for challenge in challenges %}
        {% set challengeContent = challenge.ChallengeTranslations|first %}
      <div class="col-md-6">
        <div class="card card-cover h-100 overflow-hidden text-white bg-dark rounded-5 shadow-lg" style="background-image: url('https://www.fillmurray.com/690/390');">
         <a href="{{ path('challenge_show', {'id': challenge.id}) }}" style="text-decoration: none; height: 100%;">
          <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1" style="text-shadow: black 0.1em 0.1em 0.2em;">
            <h2 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">{{ challengeContent.title }}</h2>
            <ul class="d-flex list-unstyled mt-auto align-content-between">
              <li class="me-auto">
                <img src="https://github.com/twbs.png" alt="Bootstrap" width="32" height="32" class="rounded-circle border border-white">
              </li>
              <li class="d-flex align-items-center me-3">
              </li>
              <li class="d-flex align-items-center">
                <span class="btn btn-primary">{{ ('challenge.index.cta.state_' ~ challenge.state)|trans }}</span>
              </li>
            </ul>
          </div>
          </a>
        </div>
      </div>
    {% endfor %}
    </div>
  </div>
<div class="b-example-divider"></div>
{% endblock %}
