{% extends 'base_admin.html.twig' %}

{% block title %}Challenge index{% endblock %}

{% block body %}
    <h1>Challenge index</h1>

    <table class="table">
        <thead>
            <tr>
                <th class="col-1">Id</th>
                <th class="col-2">Name</th>
                <th class="col-2">State</th>
                <th class="col-1">ParticipationStartsAt</th>
                <th class="col-1">VoteBeginsAt</th>
                <th class="col-1">DeliberationAt</th>
                <th class="col-2">Locales</th>
                <th class="col-2">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for challenge in challenges %}
            <tr>
                <td class="col-1">{{ challenge.id }}</td>
                <td class="col-2">{{ challenge.name }}</td>
                <td class="col-2">{{ 'challenge.admin.challenge_state_' ~ challenge.state|trans }}</td>
                <td class="col-1">{{ challenge.participationStartsAt ? challenge.participationStartsAt|date('Y-m-d H:i:s') : '' }}</td>
                <td class="col-1">{{ challenge.voteBeginsAt ? challenge.voteBeginsAt|date('Y-m-d H:i:s') : '' }}</td>
                <td class="col-1">{{ challenge.deliberationAt ? challenge.deliberationAt|date('Y-m-d H:i:s') : '' }}</td>
                <td class="col-2">
                    {% for translation in challenge.ChallengeTranslations %}
                    <a href="{{ path('challenge_admin_challenge_translation_edit', {'id': translation.id}) }}">
                    <span class="badge {% if translation.state == constant('App\\Entity\\Challenge\\ChallengeTranslation::PUBLISHED') %} bg-success {% else %} bg-secondary {% endif %}">{{ translation.locale }}</span>
                    </a>
                    {% endfor %}
                </td>
                <td class="col-1">
                    <a href="{{ path('challenge_admin_challenge_show', {'id': challenge.id}) }}" class="btn btn-outline-info">
